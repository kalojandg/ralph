{
  "prompt_file": "PROMPT.md",
  "claude_args": [
    "--output-format", "text",
    "--model", "claude-sonnet-4-20250514",
    "--dangerously-skip-permissions"
  ],
  "user_defined_steps": {
    "enabled": true,
    "steps_file": "user-steps.md",
    "append_to_prompt": true
  },
  "completion_criteria": {
    "patterns": [
      "<promise>COMPLETE</promise>"
    ],
    "continue_patterns": [
      "<task-complete>",
      "<status>CONTINUE</status>"
    ],
    "user_defined_file": "completion-check.ps1"
  },
  "feedback": {
    "enabled": true,
    "feedback_file": "feedback.md",
    "append_after_iteration": true
  },
  "logging": {
    "enabled": true,
    "log_dir": "logs",
    "save_iterations": true
  },
  "tdd": {
    "enabled": true,
    "test_commands": {
      "unit": "npm test",
      "e2e": "npx playwright test",
      "lint": "npm run lint",
      "typecheck": "npm run type-check"
    },
    "visual_testing": {
      "mcp_server": "cursor-ide-browser",
      "dev_server": "npm run dev",
      "designs_folder": "docs/composition/designs"
    },
    "mock_backend": {
      "type": "localStorage",
      "storage_key": "bdz_mockups"
    }
  }
}
